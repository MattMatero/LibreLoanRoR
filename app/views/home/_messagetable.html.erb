<% @messages = Message.userMessages(@user.username) %>
       <table class="table table-striped table-bordered">
        <tr>
        <th>From</th>
        <th>Content</th>
        </tr>
        <%= div_for(@messages) do |msg| %>
        <tr>
          <td><div><%= msg.sender_id %></div><%= Message.read(msg.id) %>
            <%= link_to 'Delete', message_path(msg), :method => 'delete' %></td>
          <td><%= msg.content[0...50] %>
            <br/>
            <%= link_to 'Read Msg', message_path(msg) %>
          </td>
        </tr>
        <% end %>
      </table>