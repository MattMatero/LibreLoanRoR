<h1><%= current_user.email %>'s profile</h1>

<div>

  <!-- Nav tabs -->
  <ul id="tabs" class="nav nav-tabs" role="tablist">
    <li role="presentation" id="bks" class="active"><a href="#books" aria-controls="books" role="tab" data-toggle="tab">Books</a></li>
    <li role="presentation" id="msg"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="books">
      <table class="table table-striped table-bordered">
        <tr>
        <th>Book name</th>
        <th>Book Type</th>
        <th>Book on Loan?</th>
        <th>Loan Book</th>
        </tr>
        <% @books = Book.userBooks(current_user) %>
        <%= div_for(@books) do |book|%>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.booktype %></td>
            <% if Loan.isLoaned(book.name,current_user.id) %>
              <td>Loaned</td>
              <td><%= link_to 'Check Loan', loan_path(Loan.find_by(book_id: book.name)) %></td>
            <% else %>
              <td>Not Loaned</td>
              <td><%= link_to 'Loan Book', new_loan_path(:Book => {:book_id => book.name}) %></td>
            <% end %>
        </tr>
        <% end %>
      </table>
    </div>

    <div role="tabpanel" class="tab-pane" id="messages">
      msg
    </div>
    <div role="tabpanel" class="tab-pane" id="settings">
      set
    </div>
  </div>

</div>


<script type='text/javascript'>
  $(document).ready(function(){
      $('#tabs').tab();
  });
</script>