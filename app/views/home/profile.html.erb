<h1><%= current_user.email %>'s profile</h1>

<table class="table table-striped table-bordered">
  <tr>
  <th>Book name</th>
  <th>Book Type</th>
  <th>Book on Loan?</th>
  <th>Loan Book</th>
  </tr>
  <% @books = Book.userBooks(current_user) %>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.booktype %></td>
    <% if Loan.isLoaned(book.name,current_user.id) %>
      <td>Loaned</td>
      <td><%= link_to 'Check Loan', loan_path(Loan.find_by(book_id: book.name)) %></td>
    <% else %>
      <td>Not Loaned</td>
      <td><%= link_to 'Loan Book', new_loan_path %></td>
    <% end %>
  </tr>
  <% end %>
