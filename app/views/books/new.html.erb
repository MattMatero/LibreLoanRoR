<%= form_for @book, :html => {:class => 'form-group'} do |f|  %>
    
  <%= f.label :name, class: 'col-sm-2 control-label' %> 
  <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <br/>
  <br/>
  <%= f.label :type, class: 'col-sm-2 control-label' %> 
  <div class="col-sm-10">
    <%= f.text_field :booktype, class: 'form-control' %>
  </div>
  <br/>
  <br/>
  <%= f.label :desc, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10"> 
    <%= f.text_area :desc, :rows => 3, class: 'form-control' %>
  </div>

  
  <br/>
  <%= f.submit 'Add Book' , class: 'btn btn-primary' %>
<% end %>